generator client {
  provider      = "prisma-client-js"
  binaryTargets = ["native", "rhel-openssl-3.0.x"]
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Teacher {
  id String @id @default(nanoid())

  email          String      @unique
  name           String
  clerkId        String      @unique
  createdClasses Classroom[] @relation("TeacherClasses")
  createdQuizzes Quiz[]      @relation("TeacherQuizzes")
  createdAt      DateTime    @default(now())
}

model Student {
  id           String               @id @default(nanoid())
  email        String               @unique
  clerkId      String               @unique
  name         String
  classRoomId  String?
  classRoom    Classroom?           @relation(fields: [classRoomId], references: [id])
  quizAttempts StudentQuizAttempt[]
  createdAt    DateTime             @default(now())
}

model Classroom {
  id          String    @id @default(nanoid())
  name        String
  code        String    @unique
  title       String
  description String?
  coverImg    String?
  teacherId   String
  teacher     Teacher   @relation("TeacherClasses", fields: [teacherId], references: [id])
  students    Student[]
  quizzes     Quiz[]
  createdAt   DateTime  @default(now())
}

model Quiz {
  id          String               @id @default(nanoid())
  title       String
  description String?
  coverImg    String?
  classroomId String
  classroom   Classroom            @relation(fields: [classroomId], references: [id])
  creatorId   String
  creator     Teacher              @relation("TeacherQuizzes", fields: [creatorId], references: [id])
  questions   QuizQuestion[]
  attempts    StudentQuizAttempt[]
  createdAt   DateTime             @default(now())
}

model QuizQuestion {
  id             String          @id @default(nanoid())
  question       String
  quizId         String
  timer          Int
  quiz           Quiz?           @relation(fields: [quizId], references: [id])
  options        QuizOption[]
  createdAt      DateTime        @default(now())
  studentAnswers StudentAnswer[]
}

model QuizOption {
  id             String          @id @default(nanoid())
  text           String
  isCorrect      Boolean         @default(false)
  questionId     String
  question       QuizQuestion    @relation(fields: [questionId], references: [id])
  studentAnswers StudentAnswer[]
}

model StudentQuizAttempt {
  id        String  @id @default(nanoid())
  studentId String
  quizId    String
  student   Student @relation(fields: [studentId], references: [id])
  quiz      Quiz    @relation(fields: [quizId], references: [id])

  answers   StudentAnswer[]
  score     Int             @default(0)
  createdAt DateTime        @default(now())
}

model StudentAnswer {
  id         String @id @default(nanoid())
  attemptId  String
  questionId String
  optionId   String

  attempt  StudentQuizAttempt @relation(fields: [attemptId], references: [id])
  question QuizQuestion       @relation(fields: [questionId], references: [id])
  option   QuizOption         @relation(fields: [optionId], references: [id])
}
